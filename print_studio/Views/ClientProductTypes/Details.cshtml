<script src="~/Contentjs/js/bootstrap.min.js"></script>
<script src="~/Contentjs/js/jquery.slicknav.min.js"></script>
<script src="~/Contentjs/js/owl.carousel.min.js"></script>
<script src="~/Contentjs/js/jquery.nicescroll.min.js"></script>
<script src="~/Contentjs/js/jquery.zoom.min.js"></script>
<script src="~/Contentjs/js/jquery-ui.min.js"></script>
<script src="~/Contentjs/js/main.js"></script>

